@model BlogWeb.ViewModels.LoginModel

@using (Html.BeginForm("Autentica", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(u => u.Url)

    @Html.ValidationMessage("login.Invalido")

    @Html.LabelFor(u => u.Login, "Login:" )
    @Html.TextBoxFor(u => u.Login)

    @Html.LabelFor(u => u.Senha, "Senha:")
    @Html.PasswordFor(u => u.Senha)

    <input type="submit" value="Entrar" />
}