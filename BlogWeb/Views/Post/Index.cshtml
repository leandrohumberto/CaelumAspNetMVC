
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Data da Publicação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in ViewBag.Posts)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Titulo</td>
                        <td>@p.DataPublicacao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
