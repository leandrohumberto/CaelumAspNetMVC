@* arquivo Views/Usuario/Index.cshtml *@

@model IList<BlogWeb.Models.Usuario>

@Html.RouteLink("Novo Usuário", "NovoUsuario")

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Login</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                <td>@u.Email</td>
                <td>@Html.ActionLink("Remover", "Remove", new { id = u.Id }, new { @class = "icon-cancel" })</td>
                <td>@Html.RouteLink("Editar", "VisualizaUsuario", new { id = u.Id }, new { @class = "icon-edit" })</td>
            </tr>
        }
    </tbody>
</table>
